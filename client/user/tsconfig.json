{
  "extends": "@shared/typescript/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "module": "esnext",
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    ".next/types/**/*.ts",
    "../../packages/components/ui/Tab.tsx"
  ],
  "exclude": ["node_modules"]
}
